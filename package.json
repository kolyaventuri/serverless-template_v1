{
  "name": "serverless-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "deploy:env": "sls deploy --stage $NODE_ENV",
    "deploy": "sls deploy --stage dev",
    "deploy:production": "sls deploy --stage production",
    "deploy:stage": "sls deploy --stage stage",
    "serve": "sls offline --httpPort 3000 --stage local --noPrependStageInUrl --noAuth",
    "serve:watch": "nodemon -e js,ts,jsx,tsx,yml -x npm run serve",
    "test": "npm-run-all lint:* test:*",
    "test:unit": "cross-env TS_NODE_PROJECT=tsconfig.ava.json ava",
    "lint:tsc": "tsc --noEmit",
    "lint:lint": "xo --fix",
    "build": "sls webpack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kolyaventuri/serverless-template.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kolyaventuri/serverless-template/issues"
  },
  "homepage": "https://github.com/kolyaventuri/serverless-template#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all lint:tsc && lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "xo --fix"
    ]
  },
  "xo": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    },
    "extends": [
      "xo-typescript",
      "plugin:@typescript-eslint/recommended"
    ],
    "extensions": [
      "ts"
    ],
    "space": true,
    "compilerOptions": {
      "strict": true
    },
    "rules": {
      "@typescript-eslint/camelcase": 0,
      "@typescript-eslint/member-naming": [
        "error",
        {
          "private": "^__",
          "protected": "^_"
        }
      ],
      "indent": 0,
      "@typescript-eslint/indent": [
        "error",
        2
      ],
      "@typescript-eslint/no-explicit-any": 0
    },
    "overrides": [
      {
        "files": "test/**/*.ts",
        "rules": {
          "@typescript-eslint/explicit-function-return-type": 0
        }
      }
    ],
    "settings": {
      "react": {
        "version": "16.5"
      }
    },
    "env": [
      "node"
    ],
    "include": [
      "**/*.ts?(x)"
    ],
    "ignore": [
      "*.js",
      "scripts/**/*"
    ]
  },
  "ava": {
    "babel": {
      "compileEnhancements": false,
      "compileAsTests": [
        "test/helpers/**/*.ts"
      ]
    },
    "extensions": [
      "ts",
      "tsx"
    ],
    "files": [
      "test/**/*.test.ts?(x)"
    ],
    "require": [
      "esm",
      "ts-node/register",
      "tsconfig-paths/register"
    ]
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@types/aws-lambda": "^8.10.51",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "ava": "^3.8.2",
    "aws-sdk": "^2.678.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-loader": "^8.1.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.0.0",
    "eslint-config-xo": "^0.29.1",
    "eslint-config-xo-typescript": "^0.29.0",
    "esm": "^3.2.25",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "proxyquire": "^2.1.3",
    "serverless": "^1.71.1",
    "serverless-domain-manager": "^4.0.1",
    "serverless-dotenv-plugin": "^2.4.2",
    "serverless-offline": "^6.1.5",
    "serverless-plugin-warmup": "^4.9.0",
    "serverless-prune-plugin": "^1.4.3",
    "serverless-webpack": "^5.3.2",
    "sinon": "^9.0.2",
    "ts-loader": "^7.0.4",
    "ts-node": "^8.10.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.2",
    "webpack": "^4.43.0",
    "webpack-node-externals": "^1.7.2",
    "xo": "^0.30.0"
  }
}
